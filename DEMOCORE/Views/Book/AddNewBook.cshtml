@model books
@{
    ViewData["Title"] = "AddNewBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="display-4">Add New Book</h3>
    <form method="post" asp-action="AddNewBook" asp-controller="Book">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Des"></label>
            <textarea asp-for="Des" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Totalpages"></label>
            <textarea asp-for="Totalpages" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Add Book" class="btn btn-primary" />
        </div>
    </form>
</div>
